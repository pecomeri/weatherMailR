- provide(:title, 'Home')
- if signed_in? 
  %div{class: "row"}
    %aside{class: "col-md-16"}
      %section
        = render 'shared/user_info'
      %section>
        = render 'shared/stats'
      %section>
        = render 'shared/micropost_form'
      %div{class: "col-md-16"}
        %h3 Micropost Feed
        = render 'shared/feed'
- else
  %div{class: "center hero-unit"}
    %h1 Welcome to Weather Mail
    %p Sample App

    %h2
      This is the home page for the
      %a{:href => "http://com/emails"} change

    = link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary"

  = link_to image_tag("rails.png", alt: "Rails"), "#"
